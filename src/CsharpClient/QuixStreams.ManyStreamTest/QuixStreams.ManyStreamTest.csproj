<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        
        <TargetFramework Condition=" '$(Configuration)' == 'Python' ">net8.0</TargetFramework>
        <TargetFrameworks Condition=" '$(Configuration)' != 'Python' ">net7.0;netstandard2.1</TargetFrameworks>
        <LangVersion>8.0</LangVersion>
        <Configurations>Debug;Release;Python</Configurations>
        <Platforms>AnyCPU</Platforms>
    </PropertyGroup>


    <ItemGroup>
        <ProjectReference Include="..\QuixStreams.Streaming\QuixStreams.Streaming.csproj" />
    </ItemGroup>


    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="7.0.0" />
      <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="7.0.0" />
    </ItemGroup>


    <ItemGroup>
      <None Update="appsettings.json">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>
</Project>
